{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^next$",
                "varsIgnorePattern": "^swaggerSpec$"
            }
        ],
        "no-console": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
    }
}
